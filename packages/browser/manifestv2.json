{
  "manifest_version": 2,
  "name": "moonlight",
  "description": "Yet another Discord mod",
  "version": "1.1.0",
  "content_scripts": [
    {
      "js": ["index.js"],
      "matches": ["https://*.discord.com/*"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://moonlight-mod.github.io/*",
    "https://*.discord.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
